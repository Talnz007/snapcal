{
  "manifest_version": 3,
  "name": "SnapCal - AI Math Solver",
  "version": "2.0.0",
  "description": "Enhanced math solver using Chrome's built-in AI APIs (Prompt, Summarizer, Translator, Proofreader) with multimodal support and offline functionality.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "SnapCal - AI Math Solver",
    "default_popup": "popup-csp.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}